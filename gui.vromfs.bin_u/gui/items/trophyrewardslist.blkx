{
  "root": {
    "background-color": "@modalShadeColor",
    "type": "big",
    "frame": {
      "width": "1@itemWidth + 1@itemInfoWidth + 2@itemSpacing + 2@framePadding",
      "pos": "50%pw-50%w, 50%ph-50%h",
      "position": "absolute",
      "class": "wnd",
      "frame_header": {
        "activeText": {
          "text": "#mainmenu/rewardsList",
          "caption": "yes"
        },
        "Button_close": {
          "id": "btn_back"
        }
      },
      "tdiv": [
        {
          "id": "trophy_rewards_list"
        },
        {
          "width": "pw"
        },
        {
          "max-height": "3@itemHeight+ 2@itemSpacing + 2@framePadding"
        },
        {
          "frameBlock": {
            "id": "items_list",
            "size": "fw, ph",
            "flow": "vertical",
            "overflow-y": "auto",
            "itemShopList": "yes",
            "behavior": "posNavigator",
            "navigatorShortcuts": "yes",
            "moveX": "closest",
            "moveY": "linear",
            "clearOnFocusLost": "no",
            "on_select": "updateItemInfo"
          }
        },
        {
          "frameBlock": {
            "size": "1@itemInfoWidth, ph",
            "pos": "1@blockInterval, 0",
            "position": "relative",
            "padding-top": "1@itemSpacing",
            "overflow-y": "auto",
            "scrollbarShortcuts": "yes",
            "textareaNoTab": {
              "id": "item_info",
              "width": "pw",
              "padding": "2@framePadding, 1@framePadding"
            }
          }
        }
      ]
    }
  }
}