{
  "tdiv": {
    "id": "animated_bg_picture",
    "pos": "50%sw-50%w,50%sh-50%h",
    "position": "root",
    "width": "2.5h",
    "height": "sh",
    "display": "hide",
    "enable": "no",
    "behaviour": "multiLayerImage",
    "blend-time": "500"
  },
  "systemMsg": {
    "pos": "1@systemMsgIndent, 0",
    "position": "root",
    "flow": "vertical",
    "dlDataStat": {
      "behavior": "bhvUpdater",
      "pos": "50%pw-50%w,0",
      "position": "relative",
      "value": "{\"viewId\": \"DL_DATA_STATE_TEXT\"}",
      "css-hier-invalidate": "yes",
      "animText": {
        "text": "",
        "font": "@fontTiny",
        "color-factor": "0",
        "fade": "out"
      }
    }
  },
  "root": [
    {
      "tdiv": {
        "pos": "50%sw-50%w,50%sh-50%h",
        "position": "root",
        "flow": "vertical",
        "textAreaCentered": {
          "id": "msgText",
          "width": "1.1@sf",
          "mediumFont": "yes",
          "textShade": "yes",
          "overlayTextColor": "active"
        },
        "animated_wait_icon": {
          "pos": "50%pw-50%w,3*@scrn_tgt/100.0",
          "position": "relative",
          "background-rotation": "0"
        }
      }
    },
    {
      "tdiv": {
        "pos": "50%pw-50%w, sh - 1@bh - 0.07@sf - h",
        "position": "absolute",
        "flow": "vertical",
        "background-color": "@hudTextBgShade",
        "background-repeat": "expand",
        "padding": "0.1@sf, 0.02@sf",
        "textAreaCentered": {
          "class": "active",
          "max-width": "1@sf",
          "behaviour": "bhvLoadingTip"
        }
      }
    }
  ]
}