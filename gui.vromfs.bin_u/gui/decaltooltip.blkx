{
  "tdiv": [
    {
      "flow": "vertical"
    },
    {
      "width": "pw"
    },
    {
      "padding": "5*@sf/@pf"
    },
    {
      "tdiv": {
        "height": "@decalIconHeight",
        "pos": "50%pw-50%w, 0",
        "position": "relative",
        "display": "hide",
        "img": {
          "id": "image",
          "size": "pw, ph"
        }
      }
    },
    {
      "textAreaSmall": {
        "id": "header",
        "text": "",
        "max-width": "6@decalIconHeight",
        "margin": "0, 5*@sf/@pf",
        "hideEmptyText": "yes",
        "overlayTextColor": "unlockHeader"
      }
    },
    {
      "textareaNoTab": {
        "id": "description",
        "text": "",
        "margin": "0, 5*@sf/@pf",
        "hideEmptyText": "yes",
        "max-width": "6@decalIconHeight",
        "tinyFont": "yes"
      }
    },
    {
      "textAreaSmall": {
        "id": "price",
        "display": "hide",
        "max-width": "6@decalIconHeight",
        "text": "",
        "hideEmptyText": "yes"
      }
    },
    {
      "div": {
        "id": "conditions",
        "margin": "0, 10*@sf/@pf",
        "flow": "horizontal",
        "max-width": "6@decalIconHeight",
        "display": "hide",
        "cardImg": {
          "id": "state",
          "size": "@unlockIconSize, @unlockIconSize",
          "re-type": "9rect",
          "background-repeat": "expand",
          "background-image": "#ui/gameuiskin#favorite",
          "margin": "0, 0, 5*@sf/@pf, 0"
        },
        "tdiv": {
          "flow": "h-flow",
          "textareaNoTab": {
            "id": "unlock_description",
            "text": "",
            "hideEmptyText": "yes",
            "max-width": "6@decalIconHeight - @unlockIconSize - 5*@sf/@pf"
          },
          "challengeDescriptionProgress": {
            "id": "progress",
            "display": "hide",
            "value": ""
          }
        }
      }
    },
    {
      "textareaNoTab": {
        "id": "rectriction",
        "display": "hide",
        "padding-top": "0.01@scrn_tgt_font",
        "max-width": "6@decalIconHeight",
        "text": "",
        "hideEmptyText": "yes",
        "style": "color:@warningTextColor;",
        "tinyFont": "yes"
      }
    }
  ]
}